{
  "manifest_version": 3,
  "name": "Texel",
  "version": "0.2.0",
  "description": "Texel side panel",
  "action": {
    "default_title": "Texel"
  },
  "permissions": [
    "sidePanel",
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "texel.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "texel.html",
        "texel.js",
        "texel.css",
        "icons/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/texel-icon16-v3.png",
    "48": "icons/texel-icon48-v3.png",
    "128": "icons/texel-icon128-v3.png",
    "256": "icons/texel-icon256-v3.png"
  }
}
