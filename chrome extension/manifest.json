{
  "manifest_version": 3,
  "name": "Texel",
  "version": "0.8.1",
  "description": "Texel side panel",

  "action": {
    "default_title": "Texel"
  },

  "permissions": [
    "sidePanel",
    "activeTab",
    "storage",
    "tabs",
    "scripting",
    "identity"
  ],

  "oauth2": {
    "client_id": "YOUR_OAUTH_CLIENT_ID.apps.googleusercontent.com",
    "scopes": ["openid", "email", "profile"]
  },

  "host_permissions": [
    "https://sttexeldevjpe001.blob.core.windows.net/*",
    "https://sttexelprodjpe001.blob.core.windows.net/*",
    "https://*.azurewebsites.net/*",
    "https://lively-tree-019937900.2.azurestaticapps.net/*",
    "https://lemon-beach-0ae87bc00.2.azurestaticapps.net/*",
    "https://manager.suumo.jp/*",
    "https://www.googleapis.com/*",
    "https://www.rehouse.co.jp/*"
  ],

  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },

  "side_panel": {
    "default_path": "texel.html"
  },

  "content_scripts": [
    {
      "matches": ["https://manager.suumo.jp/*"],
      "js": ["content/suumo-preview.js"],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "blocked.html",
        "blocked.js",
        "texel.html",
        "texel.js",
        "texel.css",
        "icons/*",
        "prompts/*",
        "libs/pdfjs/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "icons": {
    "16": "icons/texel-icon16-v3.png",
    "48": "icons/texel-icon48-v3.png",
    "128": "icons/texel-icon128-v3.png",
    "256": "icons/texel-icon256-v3.png"
  }
}
